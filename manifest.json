{
  "manifest_version": 2,
  "name": "Airport Code Finder",
  "description": "Insert the Airport Code to check the country",
  "version": "1.0.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ],

  "browser_action": {
    "default_title": "Airports Code",
    "default_popup": "/input.html",
    "default_icon": {
      "25": "/travelling.png"
    }
  },
  "permissions": ["storage"]
}
